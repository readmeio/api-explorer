{
  "name": "@readme/oas-form",
  "version": "11.1.5",
  "description": "A simple React component capable of building HTML forms out of an OpenAPI definition.",
  "main": "src/index.js",
  "license": "Apache-2.0",
  "repository": "https://github.com/readmeio/api-explorer/tree/master/packages/oas-form",
  "keywords": [
    "react",
    "form",
    "json-schema"
  ],
  "files": [
    "dist",
    "lib"
  ],
  "directories": {
    "test": "__tests__"
  },
  "scripts": {
    "build": "npm run dist",
    "build:lib": "rimraf lib && NODE_ENV=production babel -d lib/ src/",
    "build:dist": "rimraf dist && NODE_ENV=production webpack --config webpack.config.dist.js",
    "dist": "npm run build:lib && npm run build:dist",
    "lint": "eslint . --ext js --ext jsx",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "pretest": "npm run lint && npm run prettier",
    "preversion": "npm run dist && npm run lint",
    "publish-to-npm": "npm run dist && npm publish",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.4.5",
    "ajv": "^6.7.0",
    "core-js": "^2.5.7",
    "json-schema-merge-allof": "^0.6.0",
    "jsonpointer": "^4.0.1",
    "lodash": "^4.17.15",
    "nanoid": "^3.1.20",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "16.x",
    "react-is": "16.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@readme/eslint-config": "^4.0.0",
    "@testing-library/jest-dom": "^5.11.9",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "create-react-ref": "^0.1.0",
    "css-loader": "^0.23.1",
    "eslint": "^7.11.0",
    "jest": "^26.6.3",
    "json-loader": "^0.5.7",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-is": "^16.13.1",
    "react-portal": "^4.2.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "prettier": "@readme/eslint-config/prettier"
}
