{
  "name": "@mia-platform/syntax-highlighter",
  "description": "Syntax highlighter used on API Explorer",
  "version": "6.4.0",
  "dependencies": {
    "@mia-platform/variable": "^6.4.0",
    "codemirror": "^5.31.0"
  },
  "scripts": {
