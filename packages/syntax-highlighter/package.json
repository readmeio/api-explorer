  "repository": "https://github.com/mia-platform/api-explorer/tree/master/packages/syntax-highlighter",
  "devDependencies": {
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^23.4.2",
    "jsinspect": "^0.12.6",
    "prettier": "^1.6.1"
  },
  "peerDependencies": {
    "react": "^16.9.0"
  }
}
