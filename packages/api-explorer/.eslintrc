{
  "extends": [
    "@readme/eslint-config",
    "@readme/eslint-config/react"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "root": true,
  "rules": {
    "jsx-a11y/label-has-associated-control": [2, {
      "controlComponents": ["Input"]
    }],

    "no-underscore-dangle": ["error", {
      "allow": ["_cache", "_id", "_key"]
    }]
  }
}
