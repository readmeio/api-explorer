  "paths": {
    "/pets": {
      "patch": {
        "summary": "oneOf request with a nested allOf",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/Cat"
                  },
                  {
                    "$ref": "#/components/schemas/Dog"
                  }
                ],
                "discriminator": {
                  "propertyName": "pet_type"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated"
          }
        }
      }
    },
    "/anything/all-of-object": {
      "post": {
        "summary": "allOf with listed objects",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "allOf": [
                  {
                    "title": "First type of object",
                    "type": "object",
                    "properties": {
                      "a": {
                        "type": "string"
                      },
                      "b": {
                        "type": "string"
                      }
                    }
                  },
                  {
                    "title": "Second type of object",
                    "type": "object",
                    "properties": {
                      "c": {
                        "type": "string"
                      },
                      "d": {
                        "type": "string"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
