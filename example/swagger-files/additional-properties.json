{
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "https://httpbin.org"
    }
  ],
  "info": {
    "version": "1.0.0",
    "title": "additionalProperties demo"
  },
  "paths": {
    "/post": {
      "post": {
        "summary": "Should allow additionalProperties in JSON schema",
        "description": "",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "object with `additionalProperties: true`": {
                    "type": "object",
                    "additionalProperties": true
                  },
                  "object with `additionalProperties: { type: integer }`": {
                    "type": "object",
                    "additionalProperties": { "type": "integer" }
                  },
                  "object with `additionalProperties: { type: array, items: { type: integer } }` (this does not work)": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "array",
                      "items": {
                        "type": "integer"
                      }
                    }
                  },
                  "object with `additionalProperties: $ref` (this does not work)": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/ref"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ref": {
        "type": "integer"
      }
    }
  }
}
