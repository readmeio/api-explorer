{
    "openapi": "3.0.0",
    "servers": [
      {
        "url": "http://httpbin.org"
      }
    ],
    "info": {
      "version": "1.0.0",
      "title": "An example of how we render $ref usage on resource parameters"
    },
    "paths": {
      "/anything/{id}": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "number"
            }
          }
        ],
        "get": {
          "summary": "Get anything",
          "description": "",
          "responses": {}
        },
        "post": {
          "summary": "Post anything",
          "description": "",
          "parameters": [
            {
              "$ref": "#/components/parameters/limitParam"
            }
          ],
          "responses": {}
        }
      }
    },
    "components": {
      "parameters": {
        "limitParam": {
          "in": "query",
          "name": "limit",
          "required": false,
          "schema": {
            "type": "integer",
            "minimum": 1,
            "maximum": 50,
            "default": 20
          },
          "description": "The numbers of items to return."
        }
      },
      "schemas": {
        "string_enum": {
          "name": "string",
          "enum": [
            "available",
            "pending",
            "sold"
          ],
          "type": "string"
        }
      }
    }
  }
