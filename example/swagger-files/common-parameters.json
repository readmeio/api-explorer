{
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "http://httpbin.org"
    }
  ],
  "info": {
    "version": "1.0.0",
    "title": "An example of how we render $ref usage on resource parameters"
  },
  "paths": {
    "/anything/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "schema": {
            "type": "number"
          },
          "required": true
        },
        {
          "in": "header",
          "name": "x-extra-id",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get anything",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Post anything",
        "parameters": [
          {
            "$ref": "#/components/parameters/limitParam"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "limitParam": {
        "in": "query",
        "name": "limit",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 20
        },
        "description": "The numbers of items to return."
      }
    }
  }
}
